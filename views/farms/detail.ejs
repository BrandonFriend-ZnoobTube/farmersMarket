<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%= farm.name %></title>
</head>
<body>
<h1><%= farm.name %></h1>
<ul>
  <li><%= farm.city %></li>
  <li><%= farm.email %></li>
</ul>
<ul>
  <% for (let product of farm.products) {%>
    <li><a href="/products/<%= product._id %>"><%= product.name %> | $<%= product.price %></a></li>
  <% } %>
</ul>
<a href="/farms/<%= farm._id %>/products">Edit <%= farm.name %>'s Products</a>
<a href="/farms/<%= farm._id %>/edit">Edit Farm</a>
<a href="/farms">All Farms</a>
<form action="/farms/<%= farm._id %>?_method=DELETE" method="POST">
  <button type="submit">DELETE</button>
</form>
</body>
</html>